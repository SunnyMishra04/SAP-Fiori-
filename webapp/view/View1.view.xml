<mvc:View
    controllerName="projectui5.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
     xmlns:f="sap.ui.layout.form">
    <Page id="page">

        <customHeader>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <!-- <Title id="_IDGenTitle" text="Order Summary Master Detail" /> -->
               <Button id="homeBtn"
                text="Order Summary Master Detail"
                type="Transparent"
                press="onHomePress"
        
                />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
            </OverflowToolbar>
        </customHeader>

        <content>

        <SplitContainer id="_IDGenSplitContainer" initialMaster="master" initialDetail="orderDetail">
        <detailPages>
<Page id = "orderDetail" title="Order Details"> 
<Table id="orderTable" items="{/Order_Details}">
    <columns>
        <Column id="_IDGenColumn1">
            <Text id="_IDGenText1" text="Order ID" />
        </Column>
        <Column id="_IDGenColumn2">
            <Text id="_IDGenText2" text="Product ID" />
        </Column>
        <Column id="_IDGenColumn3">
            <Text id="_IDGenText3" text="Unit Price" />
        </Column>
        <Column id="_IDGenColumn4">
            <Text id="_IDGenText4" text="Quantity" />
        </Column>
        <Column id="_IDGenColumn5">
            <Text id="_IDGenText5" text="Discount" />
        </Column>
    </columns>
    <items>
        <ColumnListItem id="_IDGenColumnListItem">
            <cells>
                <Text id="_IDGenText6" text="{OrderID}" />
                <Text id="_IDGenText7" text="{ProductID}" />
                <Text id="_IDGenText8" text="{UnitPrice}" />
                <Text id="_IDGenText9" text="{Quantity}" />
                <Text id="_IDGenText10" text="{Discount}" />
            </cells>
        </ColumnListItem>
    </items>
</Table>

</Page> 
<Page id = "ProductDetail" title="Product">
<VBox id="_IDGenVBox" >
<f:SimpleForm id="_IDGenSimpleForm" editable = "false" labelSpanL ="3" labelSpanXL="3"  labelSpanM ="3" labelSpanS = "12" columnsXL = "1" columnsL ="1" columnsM = "1" emptySpanL = "4" emptySpanM  ="4 " emptySpanXL="4" emptySpanS = "0" layout = "ResponsiveGridLayout">
<f:content>
<Label id="_IDGenLabel" text="Product Name"></Label>
<Text id="_IDGenText"   text="{/ProductName}"/>
</f:content>

</f:SimpleForm >
</VBox>

</Page>
        </detailPages>
        <masterPages>
        <Page id="master" title="Order Master">
        
        <List id="OrderList" items="{/Orders}" itemPress="onListPress">
        <items>
        
        <StandardListItem id="_IDGenStandardListItem" title="{OrderID}" type="Navigation"/>
        </items>
        
        </List>
        </Page>
        </masterPages>
        
        </SplitContainer>
        
        </content>
    </Page>
</mvc:View>
