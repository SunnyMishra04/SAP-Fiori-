<mvc:View
    controllerName="projectui5.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:vizData="sap.viz.ui5.data"
    xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">

    <Page id="page">

        <customHeader>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <Button id="homeBtn"
                        text="Order Summary Master Detail"
                        type="Transparent"
                        press="onHomePress" />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
            </OverflowToolbar>
        </customHeader>

        <content>
            <SplitContainer id="_IDGenSplitContainer"
                            initialMaster="master"
                            initialDetail="orderDetail">

                <!-- DETAIL PAGES -->
                <detailPages>

                    <Page id="orderDetail" title="Order Details">
                        <VBox id="_IDGenVBox" class="sapUiSmallMargin">

                            <!-- Orders detail table -->
                            <Table id="orderTable" items="{/Order_Details}">
                                <columns>
                                    <Column id="_IDGenColumn"><Text id="_IDGenText" text="Order ID" /></Column>
                                    <Column id="_IDGenColumn1"><Text id="_IDGenText1" text="Product ID" /></Column>
                                    <Column id="_IDGenColumn2"><Text id="_IDGenText2" text="Unit Price" /></Column>
                                    <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="Quantity" /></Column>
                                    <Column id="_IDGenColumn4"><Text id="_IDGenText4" text="Discount" /></Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem">
                                        <cells>
                                            <Text id="_IDGenText5" text="{OrderID}" />
                                            <Text id="_IDGenText6" text="{ProductID}" />
                                            <Text id="_IDGenText7" text="{UnitPrice}" />
                                            <Text id="_IDGenText8" text="{Quantity}" />
                                            <Text id="_IDGenText9" text="{Discount}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>

                            <!-- Dashboard area -->
                            <HBox id="_IDGenHBox" class="sapUiMediumMarginTop" renderType="Bare">
                                <!-- Column chart -->
                                <viz:VizFrame
                                        id="orderChartColumn"
                                        uiConfig="{applicationSet:'fiori'}"
                                        vizType="column"
                                        height="360px"
                                        width="50%">
                                    <viz:dataset>
                                        <vizData:FlattenedDataset
                                                id="fdOrdersColumn"
                                                data="{/Order_Details}">
                                            <vizData:dimensions>
                                                <vizData:DimensionDefinition id="_IDGenDimensionDefinition"
                                                        name="Product"
                                                        value="{ProductID}" />
                                            </vizData:dimensions>
                                            <vizData:measures>
                                                <vizData:MeasureDefinition id="_IDGenMeasureDefinition"
                                                        name="Quantity"
                                                        value="{Quantity}" />
                                            </vizData:measures>
                                        </vizData:FlattenedDataset>
                                    </viz:dataset>
                                    <viz:feeds>
                                        <vizFeeds:FeedItem id="_IDGenFeedItem" uid="categoryAxis" type="Dimension" values="Product" />
                                        <vizFeeds:FeedItem id="_IDGenFeedItem1" uid="valueAxis" type="Measure" values="Quantity" />
                                    </viz:feeds>
                                </viz:VizFrame>

                                <!-- Donut chart -->
                                <viz:VizFrame
                                        id="orderChartDonut"
                                        uiConfig="{applicationSet:'fiori'}"
                                        vizType="donut"
                                        height="360px"
                                        width="50%">
                                    <viz:dataset>
                                        <vizData:FlattenedDataset
                                                id="fdOrdersDonut"
                                                data="{/Order_Details}">
                                            <vizData:dimensions>
                                                <vizData:DimensionDefinition id="_IDGenDimensionDefinition1"
                                                        name="Product"
                                                        value="{ProductID}" />
                                            </vizData:dimensions>
                                            <vizData:measures>
                                                <vizData:MeasureDefinition id="_IDGenMeasureDefinition1"
                                                        name="Quantity"
                                                        value="{Quantity}" />
                                            </vizData:measures>
                                        </vizData:FlattenedDataset>
                                    </viz:dataset>
                                    <viz:feeds>
                                        <vizFeeds:FeedItem id="_IDGenFeedItem2" uid="size" type="Measure" values="Quantity" />
                                        <vizFeeds:FeedItem id="_IDGenFeedItem3" uid="color" type="Dimension" values="Product" />
                                    </viz:feeds>
                                </viz:VizFrame>
                            </HBox>

                        </VBox>
                    </Page>

                    <Page id="ProductDetail" title="Product">
                        <VBox id="_IDGenVBox1">
                            <f:SimpleForm id="_IDGenSimpleForm"
                                          editable="false"
                                          labelSpanL="3"
                                          labelSpanXL="3"
                                          labelSpanM="3"
                                          labelSpanS="12"
                                          columnsXL="1"
                                          columnsL="1"
                                          columnsM="1"
                                          emptySpanL="4"
                                          emptySpanM="4"
                                          emptySpanXL="4"
                                          emptySpanS="0"
                                          layout="ResponsiveGridLayout">
                                <f:content>
                                    <Label id="_IDGenLabel" text="Product Name" />
                                    <Text id="_IDGenText10" text="{/ProductName}" />
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </Page>

                </detailPages>

                <!-- MASTER PAGE -->
                <masterPages>
                    <Page id="master" title="Order Master">
                        <List id="OrderList" items="{/Orders}" itemPress="onListPress">
                            <items>
                                <StandardListItem id="_IDGenStandardListItem1" title="{OrderID}" type="Navigation" />
                            </items>
                        </List>
                    </Page>
                </masterPages>

            </SplitContainer>
        </content>
    </Page>
</mvc:View>
